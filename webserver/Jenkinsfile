pipeline {
  environment {
    DOCKER_REGISTRY_URL = ''
    DOCKER_REGISTRY_CREDENTIAL = 'dockerhub_nicosp'
    IMAGE = 'nicosp/my-apache2'
    FOLDER = 'webserver'
  }
  agent any
  stages {
    stage('Build') {
      steps {
        sh '''cd ${FOLDER}
docker build -t ${IMAGE} .
'''
      }
    }
    stage('Deploy') {
      steps {
        script {
          docker.withRegistry('', DOCKER_REGISTRY_CREDENTIAL) {
            image = docker.image(IMAGE)
            image.push()
          }
        }
      }
    }
    stage('Clean Up') {
      steps {
        sh '''docker rmi ${IMAGE}'''
      }
    }
  }
}

